{
  "name": "webcharts",
  "description": "A library for creating flexible, interactive charts",
  "version": "1.9.0",
  "keywords": [
    "charts",
    "javascript",
    "interactive",
    "data visualization"
  ],
  "homepage": "https://github.com/RhoInc/Webcharts",
  "main": "lib/webcharts.common.js",
  "jsnext:main": "src/index.js",
  "dependencies": {
    "d3": "^3"
  },
  "optionalDependencies": {
    "js-xlsx": "^0.8.22"
  },
  "scripts": {
    "build": "npm run format && npm run bundle && npm run format-bundle && npm run minify && npm run test",
    "bundle": "rollup -c",
    "format": "prettier --print-width=100 --tab-width=4 --single-quote --write src/**/*.js",
    "format-bundle": "prettier --print-width=100 --tab-width=4 --single-quote --write build/webcharts.js",
    "minify": "npm run minifyjs && npm run minifycss",
    "minifycss": "cleancss -o css/webcharts.min.css css/webcharts.css",
    "minifyjs": "uglifyjs build/webcharts.js > build/webcharts.min.js",
    "notest": "npm run format && npm run bundle && npm run format-bundle && npm run minify",
    "test": "mocha --timeout 5000 --require babel-register --recursive ./test/**/*.js",
    "test-tables":"mocha --timeout 5000 --require babel-register --recursive ./test/table/*.js",
    "watch": "rollup -c -w"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rhoinc/webcharts.git"
  },
  "author": "Rho, Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rhoinc/webcharts/issues"
  },
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-register": "6",
    "clean-css-cli": "^4.0.0",
    "expect": "1",
    "jsdom": "10",
    "mocha": "3",
    "prettier": "1.4.4",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-watch": "^3.2.2",
    "uglify-js": "^2.5.0"
  }
}
