
[

{# COMMENT: Following for loops permutate through the populated lists #}
{% for y_types in y_types -%}
{% for mark_type in mark_type -%}


  {
    "label": "Y:{{ y_types }}, Mark Type: {{ mark_type }}",
	"notes": "Plotting {{ x_label }} against {{ y_label }}",
    "tests": [],
    "settings": {
	  "resizable":"true",
	  "width":500,
	  "height":500,
      "max_width":500,
      "x": {
        "column": "DATE",
        "type": "time",
        "label": "date",
		"format": "%b'%y"
      },
      "y": {
        "column": "Monthly Mean",
        "type": "{{ y_types }}",
        "label": "Monthly Mean"
		},
		"date_format": "%Y%m",
      "marks": [
        {
		  {% if mark_type == "line" -%}
		  "per": [],
		  {% else -%}
		  "per": ["DATE"],
		  {% endif -%}
		  {% if mark_type == "text" -%}
		  "text":"$y",
		  {% endif %}
          "type": "{{ mark_type }}"
        }
      ]
    },
    "filename": "../data/climate_data.csv"
  },


{# COMMENT: End the for loops seen at the top of the template #}
{% endfor -%}
{% endfor -%}

