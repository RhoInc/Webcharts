           "label": "Weight"

        },
        "x": {
           "column": "",
           "type":"linear",
           "label":"Number of observations",
           "domain":[0,null]

        },
        "marks": [
           {
              "type": "bar",
              "per":["Weight"],
              "summarizeX":"count",
              "summarizeY":"mean"
           }
        ]
     },
     "filename":"elements.csv"
  },
